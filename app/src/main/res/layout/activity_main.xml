<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ankitmah.myapplication.MainActivity"
    >

    <TextView
        android:id="@+id/txt_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="intent service example"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_intent_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="enter a string"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_intent_service" />

    <Button
        android:id="@+id/btn_start_intent_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="start intent service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_intent_service" />

    <TextView
        android:id="@+id/txt_job_scheduler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="job scheduler example"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_intent_service" />

    <Button
        android:id="@+id/btn_schedule_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="schedule job"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_job"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_job_scheduler" />

    <Button
        android:id="@+id/btn_cancel_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel job"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_schedule_job"
        app:layout_constraintTop_toBottomOf="@+id/txt_job_scheduler" />

    <TextView
        android:id="@+id/txt_foreground_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="foreground service example"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancel_job" />

    <EditText
        android:id="@+id/et_foreground_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="enter a string"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_foreground_service" />

    <Button
        android:id="@+id/btn_start_foreground_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="start foreground service"
        app:layout_constraintEnd_toStartOf="@+id/btn_stop_foreground_service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_foreground_service" />

    <Button
        android:id="@+id/btn_stop_foreground_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="end foreground \nservice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_start_foreground_service"
        app:layout_constraintTop_toBottomOf="@+id/et_foreground_service" />

    <TextView
        android:id="@+id/txt_job_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="job intent service example"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_stop_foreground_service" />

    <EditText
        android:id="@+id/et_job_intent_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="enter a string"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_job_intent_service" />

    <Button
        android:id="@+id/btn_start_job_intent_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="start job intent service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_job_intent_service" />

    <Button
        android:id="@+id/btn_startLoginActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="start login activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_job_intent_service"
        />
    <Button
        android:id="@+id/btn_startMyLoginActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="start Mylogin activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_startLoginActivity"
        />

</android.support.constraint.ConstraintLayout>
